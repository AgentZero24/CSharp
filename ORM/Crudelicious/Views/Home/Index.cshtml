@model List<Dish>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUDelicios</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container text-center">
        <div class="header">
            <h1>Crudelicious!!!</h1>
        </div>
        <div class="row">
            <h4 class="border-bottom">Recent Dishes</h4>
        </div>
        <div class="list text-left">
            @foreach (Dish item in Model)
            {
                <p><a href="@item.DishId">@item.DishName</a> by @item.ChefName</p>
            }
        </div>
        <div class="new text-left">
            <a href="/new" class="btn btn-success">Add Dish</a>
        </div>
    </div>
</body>
</html>