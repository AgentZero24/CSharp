@model Wrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <div class="row">
            <div class="form-group">
                <label asp-for="Dish.NameOfDish"></label>
                <span asp-validation-for="Dish.NameOfDish"></span>
                <input class="form-control" asp-for="Dish.NameOfDish">
                <label asp-for="Dish.NumberOfCalories"></label>
                <span asp-validation-for="Dish.NumberOfCalories"></span>
                <input class="form-control" asp-for="Dish.NumberOfCalories">
                <div class="form-group">
                <label asp-for="Dish.ChefId" class="col-4"></label>
                <span asp-validation-for="Dish.ChefId" class="text-danger"></span>
                <select asp-for="Dish.ChefId" class="form-control">
                    @foreach (Chef chef in Model.AllChefs)
                    {
                        <option value="@chef.ChefId">@chef.FirstName @chef.LastName</option>
                    }
                </select>
                </div>
                <div class="form-group">
                <span asp-validation-for="Dish.Tastiness"></span>
                <label asp-for="Dish.Tastiness"></label>
                <select asp-for="Dish.Tastiness" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <label asp-for="Dish.Description"></label>
                <span asp-validation-for="Dish.Description"></span>
                <textarea class="form-control" asp-for="Dish.Description" rows="6"></textarea>
            </div>
            </div>
        </div>
        <div class="button">
            <input type="submit" class="btn btn-success" value="Register">
        </div>
    </form>
</body>
</html>