
@model ProductWrapper

<div class="text-center">
    <h1>@Model.Product.ProductName</h1>
</div>

<div class="row">
    <div class="col-6">
        <h3>Categories:</h3>
        <ul>
            @foreach(Link category in Model.Product.Categories)
            {
                <li>@category.Category.CategoryName</li>
            }
        </ul>
    </div>
    <div class="col-6">
        <form asp-action="AddCategoryToProduct" asp-controller="Home" asp-route-productId="@Model.Product.ProductId" class="form">
            <label asp-for="CategoryIdToAdd">Add Category:</label>
            <select asp-for="CategoryIdToAdd" class="form-control">
                @foreach (Category category in Model.AllCategoriesForProduct)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>