@model ProductWrapper

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products List</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="text-right">
            <a href="product/create">Add a Product</a>
        </div>
        <div class="row text-center">
            <h3>Products | <a href="/categories">Categories</a></h3>
        </div>
        <div class="row">
            <div class="col-8">
                <h4 class="border-bottom pb-3">Check out these Products</h4>
                <div class="list mt-3">
                @foreach(Product product in ViewBag.AllProducts)
                {
                    <p><a href="/product/@product.ProductId">@product.ProductName</a></p>
                }
                </div>
            </div>
        </div>
    </div>
</body>
</html>